<div class="container">
  <div class="row mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>投稿日時</th>
          <th></th>
          <th>食べ物名</th>
          <th>説明</th>
          <th>タグ</th>
          <th>いいね数</th>
          <th>コメント数</th>
        </tr>
      </thead>
      <tbody>
        <% posts.each do |post| %>
          <tr>
            <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
            <td></td>
            <td>
              <%= link_to post_path(post.id) do %>
                <% post.food_name %>
              <% end %>
            </td>
            <td><%= post.introduction %></td>
            <td><%= post.tags.map(&:name).join(', ') %></td>
            <td id="favorite_buttons_<%= post.id %>">
              <%= render "public/favorites/btn", post: post %>
            </td>
            <td><%= post.food_comments.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>